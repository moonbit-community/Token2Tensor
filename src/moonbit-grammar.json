{
  "name": "moonbit",
  "scopeName": "source.moonbit",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#types"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.moonbit",
          "match": "//.*$"
        },
        {
          "name": "comment.block.moonbit",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.moonbit",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.moonbit",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.moonbit",
          "match": "\\b\\d+(\\.\\d+)?([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.hex.moonbit",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.moonbit",
          "match": "\\b(if|else|match|while|for|break|continue|return|try|catch|loop|lexmatch|with|guard|is)\\b"
        },
        {
          "name": "keyword.declaration.moonbit",
          "match": "\\b(fn|let|var|const|type|struct|enum|trait|impl)\\b"
        },
        {
          "name": "keyword.other.moonbit",
          "match": "\\b(pub|priv|mut|test|init)\\b"
        },
        {
          "name": "constant.language.moonbit",
          "match": "\\b(true|false|)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.moonbit",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.moonbit",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b"
        },
        {
          "name": "storage.type.moonbit",
          "match": "\\b(Int|String|Some|None|Bool|Double|Char|Array|Option|Result)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.moonbit",
          "match": "[+\\-*/=<>!&|^%]+"
        },
        {
          "name": "keyword.operator.assignment.moonbit",
          "match": "(:=|->|=>|\\|>)"
        }
      ]
    }
  }
} 
