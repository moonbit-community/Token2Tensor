{
  "name": "moonbit",
  "scopeName": "source.moonbit",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#types"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.moonbit",
          "match": "//.*$"
        },
        {
          "name": "comment.block.moonbit",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.moonbit",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.moonbit",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.binary.moonbit",
          "match": "\\b0b[01_]+[Uu]?(?:[Ll]|L|N)?\\b"
        },
        {
          "name": "constant.numeric.octal.moonbit",
          "match": "\\b0o[0-7_]+[Uu]?(?:[Ll]|L|N)?\\b"
        },
        {
          "name": "constant.numeric.hex.moonbit",
          "match": "\\b0[xX][0-9a-fA-F_]+[Uu]?(?:[Ll]|L|N)?\\b"
        },
        {
          "name": "constant.numeric.decimal.moonbit",
          "match": "\\b\\d[\\d_]*(?:\\.[0-9_]+)?(?:[eE][+-]?[0-9_]+)?[Uu]?(?:[Ll]|L|N)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.moonbit",
          "match": "\\b(if|else|match|while|for|break|continue|return|try|catch|loop|lexmatch|with|guard|is|in|raise)\\b"
        },
        {
          "name": "keyword.declaration.moonbit",
          "match": "\\b(fn|fnalias|let|letrec|const|type|typealias|struct|enum|trait|traitalias|impl|extern)\\b"
        },
        {
          "name": "keyword.other.moonbit",
          "match": "\\b(pub|priv|mut|test|derive|suberror|noraise|as|async|_)\\b"
        },
        {
          "name": "constant.language.moonbit",
          "match": "\\b(true|false|None|Some|Ok|Err)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.moonbit",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.moonbit",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b"
        },
        {
          "name": "storage.type.moonbit",
          "match": "\\b(Unit|Bool|Int|Int64|UInt|UInt64|Double|Float|String|Char|Byte|Bytes|Array|FixedArray|Map|Ref|Option|Result|BigInt|Show|Default|Eq|Compare|Hash|Error|Self)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.moonbit",
          "match": "=>|->|~|\\.\\.\\.|\\.\\.|::|=|\\?|!=|[<>]=?|&&|\\|\\||!|>>|<<|[+\\-*/%]=?|[&|]"
        },
        {
          "name": "keyword.operator.assignment.moonbit",
          "match": ":=|\\|>"
        }
      ]
    }
  }
} 
